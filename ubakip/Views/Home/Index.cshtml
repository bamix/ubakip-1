@model ubakip.Models.ComixesRepository
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-2 col-md-push-10">
        <div class="sidebar" id="sidebar">
            <button type="button" class="btn  btn-block btn-success " style="">Add post</button>
            <div class="tags-cloud">
                Popular tags:<br />
                @{
                    foreach (var p in Model.Tags)
                    {
                        <div class="tag-li"><div class="tag"><a href="#">@p.Name</a></div><span class="badge">@p.Count</span></div>
                    }
                }               
            </div>
        </div>
    </div>
    <div class="col-md-10 col-md-pull-2">
        <div class="content" id="content">
            @{
                foreach (var p in Model.Posts)
                {
                    Html.RenderPartial("PostLayout", p);
                }
            }
        </div>
    </div>
</div>